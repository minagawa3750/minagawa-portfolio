<div class="useredit_container">
  <h1 class="useredit_title">アカウント編集</h1>

  <div class="user_icon">
    <% if @user.image? %>
      <%= image_tag @user.image.url, :size => '150x150', class:"user_image" %>
    <% else %>
      <%= image_tag ('/assets/e06506159a737783f0f6d76546c21976.jpeg'), :size => '150x150', class:"user_image" %>
    <% end %>
    <h5 class="profile_title">現在のプロフィール画像</h5>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= bootstrap_devise_error_messages! %>
   
    <div class="sign_form">
      <div class="form-group">
        <%= f.label :image %><br>
        <%= f.file_field :image, class: 'user_image_field' %>
      </div>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>

        <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
      </div>

      <div class="form-group">
        <%= f.label :current_password %>
        <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>
        <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
      </div>
    </div>

    <div class="useredit_menu">
      <div class="form-group">
        <%= f.submit t('.update'), class: 'btn btn-info' %>
      </div>
      <p><%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: 'devise_link_btn' %></p>
      <%= link_to 'トップページに戻る', root_path, class: 'devise_link_btn' %>
    </div>
  <% end %>
</div>
