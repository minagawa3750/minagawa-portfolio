<div class="new_review_box mt-4">
  <div class="container">
    <div class="text-center mb-3">
      <h3 class="review_title">
        レビューを投稿する
      </h3>
    </div>
    <%= form_with(model: [ski_resort, review]) do |f| %>
      <% if review.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(review.errors.count, "件") %> の項目に誤りがあります。</h2>

          <ul>
            <% review.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
     <% end %>
     <%= f.hidden_field :ski_resort_id, value: ski_resort['id'] %>
     <%= f.hidden_field :user_id, value: current_user.id %>
       <div class ="row">
          <p class='col-md-3'>スキー場</p>
          <div class="col-md-9"> 
            <%= ski_resort['resort_name'] %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :title, class:'col-md-3 col-form-label' %>
          <div class="col-md-9">
            <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>
  
        <div class="form-group row" id="star">
          <%= f.label :rate, class:'col-md-3 col-form-label' %>
          <%= f.hidden_field :rate, id: :review_star %>
        </div>

        <script>
        $('#star').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          scoreName: 'review[rate]',
          half: true,
        });
        </script>  

        <div class="form-group row">
          <%= f.label :comment, '口コミ内容 ', class:'col-md-3 col-form-label' %>
          <div class="col-md-9">
            <%= f.text_area :comment, class: "form-control", rows: "8" %>
          </div>
        </div>
  
        <div class="form-group row justify-content-end">
          <div class="col-md-9">
            <%= f.submit '投稿する', class:"btn btn-info" %>
          </div>
        </div>
     <% end %>
  </div>
</div>
