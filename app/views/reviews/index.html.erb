<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Ski resort</th>
      <th>Title</th>
      <th>Comment</th>
      <th>Rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.user.name %></td>
        <td><%= review.ski_resort.id %></td>
        <td><%= review.title %></td>
        <td><%= review.comment %></td>
        <td><%= review.rate %></td>
        <td><%= link_to 'Show', ski_resort_review_path(review.ski_resort_id, review.id) %></td>
        <td><%= link_to 'Edit', edit_ski_resort_review_path(review.ski_resort_id, review.id) %></td>
        <td><%= link_to 'Destroy', ski_resort_review_url(review.ski_resort_id, review.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_ski_resort_review_path %>
